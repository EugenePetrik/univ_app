<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p><%= @student.email %></p>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to "<i class=\"material-icons right\">create</i>#{t('.edit_your_profile')}".html_safe,
          edit_student_path(@student), class: "waves-effect waves-light btn" %>
    <% end %>
  </div>

  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= t('.course_enrollments') %>:</span>
          <% if @student.courses.empty? %>
            <%= t('.none') %>
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <%= content_tag :li, class: "grey-text text-lighten-3", data: { qa: course.id } do %>
                  <%= link_to course.name, course_path(course), class: "grey-text text-lighten-3" %>
                <% end %>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
