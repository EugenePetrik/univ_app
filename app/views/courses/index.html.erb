<div class="row">
  <div class="col s12">
    <h3 class="center-align">Course Listings</h3>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Course name: <%= course.name %></span>
          <p>Course ID: <%= course.short_name %></p>
        </div>
        <div class="card-action">
          <% if logged_in? && !(current_user.courses.include?(course)) %>
            <%= link_to 'Enroll', course_enroll_path(course_id: course.id), method: :post %>
          <% end %>
          <%= link_to "Info", course_path(course) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
